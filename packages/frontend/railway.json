{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfile": "../../Dockerfile.frontend",
    "buildContext": "."
  },
  "deploy": {
    "startCommand": "cd packages/frontend && npm start",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 5,
    "port": 3001,
    "healthchecks": {
      "liveness": {
        "path": "/",
        "initialDelaySeconds": 30,
        "intervalSeconds": 30,
        "timeoutSeconds": 10
      }
    }
  }
}
