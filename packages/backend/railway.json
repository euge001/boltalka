{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfile": "../../Dockerfile.backend"
  },
  "deploy": {
    "startCommand": "node packages/backend/dist/main.js",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 5,
    "healthchecks": {
      "liveness": {
        "path": "/health",
        "initialDelaySeconds": 30,
        "periodSeconds": 30
      }
    }
  }
}
